<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="airline_details_action" model="ir.actions.act_window">
        <field name="name">Airline Details</field>
        <field name="res_model">airline.airline</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="airline_details_view" model="ir.ui.view">
        <field name="name">airline.airline.form</field>
        <field name="model">airline.airline</field>
        <field name="arch" type="xml">
            <form string="airline">
                <sheet>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="description"/>
                            <field name="name"/>

                        </group>




                    </group>
                </sheet>
            </form>
        </field>
    </record>
     <record id="airline_details_view_tree" model="ir.ui.view">
        <field name="name">airline.airline.tree</field>
        <field name="model">airline.airline</field>
        <field name="arch" type="xml">
            <tree string="airline">

                            <field name="code"/>
                            <field name="description"/>
                            <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="airline_details_view_search_view" model="ir.ui.view">

        <field name="name">airline.airline.search.view</field>

        <field name="model">airline.airline</field>

        <field name="arch" type="xml">

            <search string="Airline">

                <field name="code"/>

                <filter name="code" string="Code"
                        context="{'group_by':'code'}"/>

<!--                <filter name="code" string="Code"/>-->
<!--                <filter name="ruc" string="Ruc"-->
<!--                        context="{'group_by':'code'}"/>-->
<!--                <filter name="name" string="name"/>-->
            </search>

        </field>


    </record>

    <menuitem id="airline_details_menu" name="Airline Details"
              parent="airport_lounge.airport_lounge_root"
              action="airline_details_action"/>
</odoo>

