<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="airport_service_action" model="ir.actions.act_window">
        <field name="name">Shower Services</field>
        <field name="res_model">shower.service</field>
                        <field name="context">{'search_default_state': 1}</field>

        <field name="view_mode">tree,form,kanban</field>
    </record>
     <record id="shower_kanban" model="ir.ui.view">
        <field name="name">shower.service.kanban</field>
        <field name="model">shower.service</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                                        <attribute name="default_group_by">state</attribute>
                    <t t-name="kanban-box">
                        <t t-if="record.cleaning.raw_value == true">
                        <div class="oe_kanban_global_click o_shower_kanban"  style="background-color: #09c05f;">
                             <strong class="o_kanban_record_title o_shower_kanban_heading"
                                        style="font-size:16px;">
                                    <field name="shower_id"
                                           style="display:block;"/>

                                 <p  style="font-size:10px; color:black font-style: oblique;">cleaning</p>
                                 <p  style="font-size:10px; color:black font-style: oblique;">Schedule Time:</p>
                                 <field name="time_schedule_start"/> to
                                 <field name="time_schedule_end"/>




                                    <field name="maintenance" invisible="1"/>
                                    <field name="cleaning" invisible="1"/>

                                </strong>
                        </div>
                </t>
                        <t t-else="">
                            <t t-if="record.maintenance.raw_value == true">

                                <div class="oe_kanban_global_click o_shower_kanban"
                                     style="background-color: #b8c9c8;">
                                    <strong class="o_kanban_record_title o_shower_kanban_heading"
                                            style="font-size:16px;">
                                        <field name="shower_id"
                                               style="display:block;"/>
                                                                                <p  style="font-size:10px; color:black font-style: oblique;">maintenance</p>
                                                                         <p  style="font-size:10px; color:black font-style: oblique;">Schedule Time:</p>


                                          <field name="time_schedule_start"/> to
                                 <field name="time_schedule_end"/>
                                        <br/>
                                        <field name="maintenance"
                                               invisible="1"/>
                                        <field name="cleaning" invisible="1"/>

                                    </strong>
                                </div>
                            </t>
                                                    <t t-else="">

                             <div class="oe_kanban_global_click o_shower_kanban"
                                     style="background-color: #FFF;">
                                    <strong class="o_kanban_record_title o_shower_kanban_heading"
                                            style="font-size:16px;">
                                        <field name="shower_id"
                                               style="display:block;"/>
                                                                                                                        <field name="passenger_id"/><br/>
                                                                         <p  style="font-size:10px; color:black font-style: oblique;">Schedule Time:</p>


                                          <field name="time_schedule_start"/> to
                                 <field name="time_schedule_end"/>

                                        <br/>


                                        <field name="maintenance"
                                               invisible="1"/>
                                        <field name="cleaning" invisible="1"/>

                                    </strong>
                                </div>
                                                    </t>


                        </t>


                    </t>
                </templates>



        </kanban>
         </field>

    </record>
    <record id="shower_service_view" model="ir.ui.view">
        <field name="name">shower.service.form</field>
        <field name="model">shower.service</field>
        <field name="arch" type="xml">
            <form string="menu">
                <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="available,booked,maintenance,cleaning"/>
                         <button name="action_conform" string="Conform" type="object"/>
                     </header>
                <sheet>


                        <group>
                            <field name="shower_id"/>
                       <field name="shower_max"/>
                            <field name="branch_id"/>
                            <field name="cleaning_time"/>
                            <field name="usage_time"/>
                            <field name="passenger_id"/>
                            <field name="time_schedule_start"/>
                            <field name="time_schedule_end"/>

                              <field name="maintenance" invisible="1"/>
                                    <field name="cleaning" invisible="1"/>


                        </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="shower_service_view_search_view" model="ir.ui.view">

        <field name="name">shower.service.search.view</field>

        <field name="model">shower.service</field>

        <field name="arch" type="xml">

            <search string="Shower">

                <field name="passenger_id"/>

                <filter name="state" string="state"
                        context="{'group_by':'state'}"/>

<!--                <filter name="code" string="Code"/>-->
<!--                <filter name="ruc" string="Ruc"-->
<!--                        context="{'group_by':'code'}"/>-->
<!--                <filter name="name" string="name"/>-->
            </search>

        </field>


    </record>

    <menuitem id="shower_service" name="Shower Service" action="airport_service_action" parent="airport_lounge.passenger_services" />
</odoo>

