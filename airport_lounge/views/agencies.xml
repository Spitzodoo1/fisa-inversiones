<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="agencies_details_action" model="ir.actions.act_window">
        <field name="name">Agencies Details</field>
        <field name="res_model">agencies.details</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="agencies_details_view" model="ir.ui.view">
        <field name="name">agencies.details.form</field>
        <field name="model">agencies.details</field>
        <field name="arch" type="xml">
            <form string="menu">
                <sheet>
                    <header>
                          <field name="state" widget="statusbar"
                               statusbar_visible="active,deactive,cancel"/>
                          <button name="activate_airline" string="Activate"
                                type="object" class="oe_highlight"/>
                        <button name="deactivate_airline" string="Deactivate"
                                type="object" class="oe_highlight"/>
                    </header>
                        <group>
                            <field name="code"/>
                            <field name="ruc"/>
                            <field name="description"/>
                            <field name="currency_id"/>
                            <field name="unit_price"/>
                        </group>
                     <group>
                            <span class="o_form_label o_td_label"
                                  name="address_name">
                                <b>Address</b>

                            </span>
                            <div class="o_address_format">
                                <field name="address" placeholder="Street..."
                                       class="o_address_street"/>

                                <field name="city" placeholder="City"
                                       class="o_address_city"/>
                                <field name="state_id" class="o_address_state"
                                       placeholder="State"/>
                                <!--                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>-->
                                <field name="country_id" placeholder="Country"
                                       class="o_address_country"/>
                            </div>
                            <field name="phone"/>

                     </group>

                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="agencies_details" name="Agencies Details" action="agencies_details_action" parent="airport_lounge.airline_details"/>
</odoo>

