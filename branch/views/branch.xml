<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="view_fisa_branch" model="ir.ui.view">
        <field name="name">fisa.branch.view</field>
        <field name="model">fisa.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"  placeholder="Name"/>
                    <group>
                            <span class="o_form_label o_td_label"
                                  name="address">
                                <b>Address</b>

                            </span>
                            <div class="o_address_format">
                                <field name="address" placeholder="Street..."
                                       class="o_address_street"/>

                                <field name="city" placeholder="City"
                                       class="o_address_city"/>
                                <field name="state_id" class="o_address_state"
                                       placeholder="State"/>
                                <!--                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>-->
                                <field name="country_id" placeholder="Country"
                                       class="o_address_country"/>
                            </div>
                            <field name="phone"/>
                            <field name="contact"/>
                            <field name="mail"/>
                            <field name="website"/>
                        </group>
                </sheet>
            </form>

        </field>
    </record>
     <record id="fisa_branch_action" model="ir.actions.act_window">
        <field name="name">Branch</field>
        <field name="res_model">fisa.branch</field>
        <field name="view_mode">tree,form</field>
    </record>
  <menuitem id="branches_details_menu" name="Branch"
              parent="base.menu_users"
              action="fisa_branch_action"/>

</odoo>
